<launch>

  <!--empty world-->

  <arg name="stair_length" default="1.0"/>

  <include
    file="$(find wheelleg_gazebo)/launch/empty_world.launch" >
    <arg name="verbose" value="true" />
    <arg name="paused" value="true" />
    <arg name="world_name" value="$(find stairs_playground)/world/empty.world"/>
  </include>

  <!--setup playground-->

  <include file="$(find stairs_playground)/launch/spawn_stairs_playground.launch">
    <arg name="initial_x" value = "2"/>
    <arg name="initial_y" value = "1"/>
    <arg name="stair_length" value="$(eval arg('stair_length'))"/>
    <arg name="initial_height" value ="0.10" />
    <arg name="increment_height" value="0.01"/>
    <arg name="num_envs" value="10"/>
  </include>

