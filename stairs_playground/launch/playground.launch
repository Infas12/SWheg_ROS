<launch>

  <!--empty world-->
  <include
    file="$(find wheelleg_gazebo)/launch/empty_world.launch" >
    <arg name="verbose" value="true" />
    <arg name="paused" value="true" />
    <arg name="world_name" value="$(find stairs_playground)/world/empty.world"/>
  </include>


  <!--setup playground-->
  <include file="$(find stairs_playground)/launch/spawn_stairs_playground.launch">
    <arg name="num_envs" value="10"/>
    <arg name="initial_x" value = "2"/>
    <arg name="initial_y" value = "0"/>
    <arg name="stair_length" value="0.2"/>
  </include>

  <include file="$(find stairs_playground)/launch/spawn_stairs_playground.launch">
    <arg name="num_envs" value="10"/>
    <arg name="initial_x" value = "2"/>
    <arg name="initial_y" value = "4"/>
    <arg name="stair_length" value="0.25"/>
  </include>

  <include file="$(find stairs_playground)/launch/spawn_stairs_playground.launch">
    <arg name="num_envs" value="10"/>
    <arg name="initial_x" value = "2"/>
    <arg name="initial_y" value = "8"/>
    <arg name="stair_length" value="0.3"/>
  </include>



</launch>